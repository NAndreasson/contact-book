@import "../base";

html, body {
	height: 100%;
}

body {
	background-color: #f5f5f5;
}

.form-signin {
	max-width: 300px;
	padding: 19px 29px 29px;
	margin: 0 auto 20px;
	background-color: #fff;
	border: 1px solid #e5e5e5;
	-webkit-border-radius: 5px;
	   -moz-border-radius: 5px;
	        border-radius: 5px;
	-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
	   -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
	        box-shadow: 0 1px 2px rgba(0,0,0,.05);
}
.form-signin .form-signin-heading,
.form-signin .checkbox {
	margin-bottom: 10px;
}
.form-signin input[type="text"],
.form-signin input[type="password"] {
	font-size: 16px;
	height: auto;
	margin-bottom: 15px;
	padding: 7px 9px;
}

#contacts {
	height: 600px;
	overflow-y: scroll;
}

.left-col {
	float: left;
	width: 25%;
}

.right-col {
	float: left;
	width: 75%;
}

#list-type {
	width: 100%;
	button {
		width: 50%;
	}
}

.left-col footer {
	button {
		width: 50%;
	}
}

#primary-contact {
	max-width: 300px;
	text-align: center;
	margin: 0 auto;
	border: 1px solid #aaa;
	border-radius: 5px;

	header {
		padding: 1em;
	}

	h2 {
		padding: 0.35em;
		font-size: 2em;
	}

	img {
		height: 100px;
	}
}

.contact {
	height: 60px;
	border-bottom: 1px solid #ccc;

	&:hover {
		background: #eee;
		cursor: pointer;
	}

	& > img {
		margin: 10px 0;
		height: 40px;
	}

	.name {
		font-weight: bold;
		margin-left: 1em;
	}
}

.contact:last-of-type {
	border-bottom: 0px;
}